

<div>
        <h2>{{post.title}}</h2>
        <p id="author">Post By{{post.user.username}} on {{format_date post.created_at}}</p>

        <p>{{post.post_text}}</p>
    
    <div>
        <h3>Comments</h3>
        {{#each post.comment as |comment|}}
        {{> comment}}
        {{/each}}
    </div>

    <form id="new-comment-form">
        <textarea id="text" name="text">
            {{text}}
        </textarea>
        <button type="submit" value="Submit">Submit</button>
    </form>
</div>







