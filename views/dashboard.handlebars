<section class="row">
    <div class="column">
        <h2>Add a Post</h2>

        <form class="new-post form">
            <div>
                <label for="post-title">Title</label>
                <input type="text" id="post-title" name="post-title"/>
            </div>
            <div>
                <label for="post_text">Text</label>
                <textarea id="post_text" name="post_text"></textarea>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
    <div class="column">
        <h3>About the Author</h3>
        {{> user-info}}
    </div>
</section>

{{#if post.length}}
<article>
    <h4>My Posts</h4>
    <ol>
        {{#each post as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/update-post/{{post.id}}" class="edit-link">Update Post</a>
        </li>
        {{/each}}
    </ol>
</article>
{{/if}}



